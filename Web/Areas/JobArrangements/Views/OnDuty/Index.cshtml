                    title: title,
                    start: start,
                    end: end,
                    event_id: '这是我的工作安排的Id，请和数据库中相关信息关联起来'
                };
                $('#OnDutycalendarAll').fullCalendar('renderEvent', eventData, true); // stick? = true
            }
        }
        $('#OnDutycalendarAll').fullCalendar('unselect');
    }

    $(document).ready(function () {

        $('#OnDutycalendarAll').fullCalendar({
