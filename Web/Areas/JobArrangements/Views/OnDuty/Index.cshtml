<script type="text/javascript">

    function openEditDialog4(start, end,state) {
        $.pdialog.open('@Url.Action("_OnDuty", "JobArrangements", new { area = "JobArrangements" })', "OnDutycalendarAll", "值班安排", { width: 700, height: 500, mask: true });
        if (state == 1) {
